<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/tools")
    @Scripts.Render("~/bundles/modernizr")       


    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.6.1/react.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.6.1/react-dom.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.7.1/remarkable.min.js"></script>
</head>


<body>
    <div id="loading-animation-id" style="display:none; position:fixed; top:33%; left:0; z-index:100; width:100%; background-color:#252529; opacity:1">
        <center style="opacity:1">
            <div class="sk-folding-cube">
                <div class="sk-cube1 sk-cube"></div>
                <div class="sk-cube2 sk-cube"></div>
                <div class="sk-cube4 sk-cube"></div>
                <div class="sk-cube3 sk-cube"></div>
            </div>
            <div style="font-family:sans-serif; font-size:22px">LOADING....</div>
        </center>
    </div>


    <!-- Top navigation toggle -->
    <div class="row">
        <div class=".col-xs-12 .col-sm-12 .col-md-12 .col-lg-12 ">
            <div class="menu-icon menu-toggle" style="z-index:100">
                <div class="bar1"></div>
                <div class="bar2"></div>
                <div class="bar3"></div>
            </div>
        </div>
    </div>

    <div class="overlay" id="overlay">
        <div class="row">
            <div class=".col-xs-12 .col-sm-12 .col-md-12 .col-lg-12 ">
                <div class="menu-toggle" style="font-size:30px; font-family:'Segoe MDL2 Assets'; font-weight:bold; margin-right:50px">
                    CLOSE
                </div>
            </div>
        </div>


        <nav class="overlay-menu">
            <ul>
                <li>
                    @Html.ActionLink("Home", "Index", "Home", new { id = "" }, null)
                </li>                <li><a href="#">About</a></li>
                <li><a href="#">Contact Us</a></li>
                @{
                    if (Session["UserProfile"] != null)
                    {
                        <li>
                            @Html.ActionLink("Sign Out", "SignOut", "Login", new { id = "" }, null)
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Sign In", "Index", "Login", new { id = "" }, null)
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
    
    <div class="main-content-container">
        <div class="container body-content" style="padding:0; margin:0">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/angular.js"></script>
    <script src="@Url.Content("~/Scripts/Tutorial.jsx")"></script>
</body>
</html>
